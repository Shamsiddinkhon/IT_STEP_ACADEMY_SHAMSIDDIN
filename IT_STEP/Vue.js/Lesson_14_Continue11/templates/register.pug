include includes/head
include includes/nav
include includes/footer
doctype html
html(lang="en")
  head
    +head("SIGN UP")
  body 
    +nav
    .container
      form.formauth(action="/auth/register" method="POST")
        h1.login-header SIGN UP
        input(type="text" name="username" placeholder="Username" required)
        input(type="text" name="name" placeholder="Name" required)
        input(type="text" name="lastName" placeholder="Lastname" required)
        input(type="email" name="email" placeholder="Email" id="email" required)
        input(type="password" name="password" placeholder="Password" required)
        input(type="password" name="password-repeat" placeholder="Repeat password" required)
        input(type="tel" name="phone"  placeholder="+998XXYYY-YY-YY" required)
        input(type="text" name="country" placeholder="Country" required)
        label I agree with terms and condition
          input.checkbox(type="checkbox", name="agree" required) 
        input(type="submit" value="Sign up")
    +footer 