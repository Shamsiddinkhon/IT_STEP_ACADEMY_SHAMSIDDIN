<%- include('../partials/head') %>
<h1>All Comments</h1>
<ul class="list-group">
    <%for (let c of contents ) {%>
    <li class="list-group-item strong d-flex flex-row justify-content-between">
    <div>
        ID: <%= c.id %>  <br />
        Name: <b><%= c.title.toUpperCase() %></b> <br />
        Comment: <%= c.content %> <br>
    
        <a href="bloks/<%= c.id %>" class="btn btn-primary" >More...</a>
    </div>
      <div style="width: 200px;">
        <img src="https://images.unsplash.com/flagged/photo-1570612861542-284f4c12e75f?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" alt="flagged" style="width: 100%;">
      </div>
    </li>
    <% } %>
</ul>

